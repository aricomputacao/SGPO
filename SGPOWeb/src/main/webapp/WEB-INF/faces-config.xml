        <description>Validador de CPF e CNPJ</description>
        <validator-id>documentoValidator</validator-id>
        <validator-class>br.com.sefincaucaia.utilitarios.validadores.DocumentoValidator</validator-class>
    </validator>-->

    <application>
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>en_US</supported-locale>
        </locale-config>
        
        <managed-bean>
            <managed-bean-name>localeController</managed-bean-name>
            <managed-bean-class>br.com.sgpo.utilitarios.LocaleController</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>   
        </managed-bean>
        
        <!--parametros para utilização do dialogFramework-->
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>

       
        <resource-bundle>
            <base-name>br.com.sgpo.utilitarios.arquivos.label</base-name>
            <var>label</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>br.com.sgpo.utilitarios.arquivos.mensagens</base-name>
            <var>msg</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>br.com.sgpo.arquivos.administrativo</base-name>
            <var>administrativo</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>br.com.sgpo.arquivos.seguranca</base-name>
            <var>seguranca</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>br.com.sgpo.arquivos.engenharia</base-name>
            <var>engenharia</var>
        </resource-bundle>
       
        

    </application>

</faces-config>
